[loggers]
keys = root

[handlers]
keys = console, accesslog

[formatters]
keys = generic, accesslog

[logger_root]
level = ${settings:loglevel}
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[handler_accesslog]
class = FileHandler
args = (os.path.join('${settings:logfiles}', 'access.log'), 'a')
level = INFO
formatter = accesslog

[formatter_generic]
format = %(asctime)s %(levelname)s [%(name)s] %(message)s

[formatter_accesslog]
format = %(message)s

[app:main]
use = egg:Trilith#app
dsn = ${settings:dsn}

[server:main]
use = egg:Paste#http
host = ${settings:host}
port = ${settings:port}
